@{
    ViewData["Title"] = "MECC Chatbot Portal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
            --light-color: #ecf0f1;
            --dark-color: #2c3e50;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: var(--dark-color);
        }

        .container {
            text-align: center;
            max-width: 800px;
            padding: 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: var(--shadow);
        }

        h1 {
            color: var(--primary-color);
            margin-bottom: 2rem;
            font-weight: 600;
            font-size: 2.2rem;
        }

        .button-group {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .action-button {
            padding: 1rem 2rem;
            font-size: 1.1rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: var(--transition);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            min-width: 220px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .scrape-button {
            background-color: var(--secondary-color);
            color: white;
        }

            .scrape-button:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(41, 128, 185, 0.2);
            }

        .chat-button {
            background-color: var(--accent-color);
            color: white;
        }

            .chat-button:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(231, 76, 60, 0.2);
            }

        .icon {
            width: 20px;
            height: 20px;
            fill: currentColor;
        }

        .description {
            margin: 2rem 0;
            color: #7f8c8d;
            line-height: 1.6;
            font-size: 1.1rem;
        }

        footer {
            margin-top: 3rem;
            font-size: 0.9rem;
            color: #95a5a6;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>MECC Environmental Chatbot</h1>

        <p class="description">
            Access real-time environmental data from Qatar's Ministry of Environment and Climate Change.
            Scrape the latest content or interact with our AI-powered chatbot.
        </p>

        <div class="button-group">
            <a asp-action="ScrapeContent" asp-controller="Home" class="action-button scrape-button">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M19 12h-2v3h-3v2h5v-5zM7 9h3V7H5v5h2V9zm14-6H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14z" />
                </svg>
                Scrape Content
            </a>

            <a asp-action="Index" asp-controller="Chatbot" class="action-button chat-button">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z" />
                </svg>
                Ask Chatbot
            </a>
        </div>

        <footer>
            © @DateTime.Now.Year Ministry of Environment and Climate Change. All rights reserved.
        </footer>
    </div>
</body>
</html>
